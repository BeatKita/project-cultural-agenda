<div class="container" style="padding-bottom:2%">
  <div class="row">
    <div class="col">
      <div class="card mx-auto border-light">
        <div class="card-body" style="margin-left: 25%; margin-right: 35%">
          <h2>Se connecter</h2>

          <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
            <div class="field">
              <%= f.email_field :email, label: "Email", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.password_field :password, label: "Mot de passe :", autocomplete: "current-password" %>
            </div>

            <% if devise_mapping.rememberable? %>
              <div class="field">
                <%= f.check_box :remember_me, label: "Se souvenir de moi" %>
              </div>
            <% end %>
            <br />
            <div class="actions">
              <%= f.submit "Se connecter" %>
            </div>
          <% end %>
          <%= render "admins/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>          
