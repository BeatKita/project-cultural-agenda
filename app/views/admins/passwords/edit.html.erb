<div class="container" style="padding-bottom:2%">
  <div class="row">
    <div class="col">
      <div class="card mx-auto border-light">
        <div class="card-body" style="margin-left: 25%; margin-right: 35%">
          <h2>Changer votre mot de passe</h2>
          <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "admins/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="field">
            <%= f.password_field :password, label: "Nouveau mot de passe :", autofocus: true, autocomplete: "new-password" %>
            <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caract√®res minimum)</em>
            <% end %>
          </div>

          <div class="field">
            <%= f.password_field :password_confirmation, label: "Confirmer votre nouveau mot de passe :", autocomplete: "new-password" %>
          </div>

          <div class="actions">
            <%= f.submit "Changer mon mot de passe", :class => "btn btn-primary" %>
          </div>
          <% end %>
          <br />
          <%= render "admins/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>
