<h2>Renvoyer les instructions de déblocage</h2>

<%= bootstrap_form_for(resource, as: resource_name, url: unlock_path(resource_name), html: { method: :post }) do |f| %>
  <%= render "admins/shared/error_messages", resource: resource %>

  <div class="field">
    <%= f.email_field :email, label: "Email", autofocus: true, autocomplete: "email" %>
  </div>

  <div class="actions">
    <%= f.submit "Renvoyer les instructions de déblocage", :class => "btn btn-primary" %>
  </div>
<% end %>
<br />
<%= render "admins/shared/links" %>
