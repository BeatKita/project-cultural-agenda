<div class="container" style="padding-bottom:2%">
  <div class="row">
    <div class="col">
      <div class="card mx-auto border-light">
        <div class="card-body" style="margin-left: 25%; margin-right: 35%">
          <h2>S'enregistrer </h2>

          <%= bootstrap_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
            <%= render "admins/shared/error_messages", resource: resource %>

            <div class="field">
              <%= f.email_field :email, label: "Email", autofocus: true, autocomplete: "email" %>
            </div>

            <div class="field">
              <%= f.password_field :password, label: "Mot de passe :", autocomplete: "new-password" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> caractÃ¨res minimum)</em>
              <% end %>
            </div>

            <div class="field">
              <br />
              <%= f.password_field :password_confirmation, label: "Confirmer mot de passe :", autocomplete: "new-password" %>
            </div>

            <div class="actions">
              <%= f.submit "S'enregistrer", :class => "btn btn-primary" %>
            </div>
          <% end %><br />
          <%= render "admins/shared/links" %>
        </div>
      </div>
    </div>
  </div>
</div>