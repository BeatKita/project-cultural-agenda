<%= link_to "Créer un nouvel event", admin_events_new_path %>
<br>
<br>
<table class="table">
  <thead>
    <tr>
      <th scope="col"></th>
      <th scope="col">Nom</th>
      <th scope="col">Description</th>
      <th scope="col">Lieu</th>
      <th scope="col">Date de début</th>
      <th scope="col">Date de fin</th>
      <th scope="col"></th>
      <th scope="col"></th>
    </tr>
  </thead>
  <% e = 0 %>
<% @events.each do |event| %>
  <% e = e + 1 %>
    <tbody>
    <tr>
      <th scope="row"><%= e %></th>
      <td><%= event.name %></td>
      <td><%= event.description %></td>
      <td><%= event.place_name %></td>
      <td><%= event.start_date.to_s %></td>
      <td><%= event.end_date.to_s %></td>
      <td><%= link_to "Editer cet évènement", admin_events_edit_path(event.id) %></td>
      <td><%= link_to "Supprimer cet évènement", admin_events_destroy_path(event.id), data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr de vouloir supprimer cet évènement?"} %></td>
    </tr>
  </tbody>
<% end %>
</table>